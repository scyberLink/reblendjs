{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxFactory": "Reblend"
  },
  "include": ["src"]
}
